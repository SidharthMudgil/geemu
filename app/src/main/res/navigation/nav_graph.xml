<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/exploreFragment">

    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.sidharth.geemu.presentation.explore.ExploreFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_explore" >
        <action
            android:id="@+id/action_exploreFragment_to_gameDetailsFragment"
            app:destination="@id/gameDetailsFragment" />
        <action
            android:id="@+id/action_exploreFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_exploreFragment_to_gamesFragment"
            app:destination="@id/gamesFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.sidharth.geemu.presentation.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_gameDetailsFragment"
            app:destination="@id/gameDetailsFragment" />
        <action
            android:id="@+id/action_profileFragment_to_gamesFragment"
            app:destination="@id/gamesFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameDetailsFragment"
        android:name="com.sidharth.geemu.presentation.game.GameDetailsFragment"
        android:label="fragment_game_details"
        tools:layout="@layout/fragment_game_details" >
        <action
            android:id="@+id/action_gameDetailsFragment_to_videoFragment"
            app:destination="@id/videoFragment" />
        <action
            android:id="@+id/action_gameDetailsFragment_to_imageFragment"
            app:destination="@id/imageFragment" />
        <action
            android:id="@+id/action_gameDetailsFragment_to_fragmentCreatorDetails"
            app:destination="@id/fragmentCreatorDetails" />
    </fragment>
    <fragment
        android:id="@+id/imageFragment"
        android:name="com.sidharth.geemu.presentation.image.ImageFragment"
        android:label="fragment_image"
        tools:layout="@layout/fragment_image" />
    <fragment
        android:id="@+id/videoFragment"
        android:name="com.sidharth.geemu.presentation.video.VideoFragment"
        android:label="fragment_video"
        tools:layout="@layout/fragment_video" />
    <fragment
        android:id="@+id/fragmentCreatorDetails"
        android:name="com.sidharth.geemu.presentation.game.CreatorDetailsFragment"
        android:label="fragment_item_info"
        tools:layout="@layout/fragment_creator_details" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.sidharth.geemu.presentation.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment2_to_gameDetailsFragment"
            app:destination="@id/gameDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/gamesFragment"
        android:name="com.sidharth.geemu.presentation.games.GamesFragment"
        android:label="fragment_all_games"
        tools:layout="@layout/fragment_games" />
    <fragment
        android:id="@+id/followingFragment"
        android:name="com.sidharth.geemu.presentation.following.FollowingFragment"
        android:label="fragment_following" >
        <action
            android:id="@+id/action_followingFragment_to_gameDetailsFragment"
            app:destination="@id/gameDetailsFragment" />
    </fragment>
</navigation>