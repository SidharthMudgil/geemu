<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.geemu" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="fontFamily">@font/inter</item>
        <item name="android:windowBackground">@color/grey900</item>
        <item name="android:statusBarColor">@color/grey900</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
    </style>

    <style name="Theme.geemu" parent="Base.Theme.geemu" />

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheet</item>
    </style>

    <style name="Widget.App.BottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/grey800</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="elevation">0dp</item>
        <item name="android:textColor">@color/grey100</item>
        <item name="chipBackgroundColor">@color/grey700</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="shapeAppearanceOverlay">@style/CircularImageView</item>
    </style>

    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/card_corner_radius</item>
    </style>
</resources>